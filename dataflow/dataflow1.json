{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "moviesinput",
						"type": "DatasetReference"
					},
					"name": "moviesinput"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "moviesoutput",
						"type": "DatasetReference"
					},
					"name": "moviesoutput"
				}
			],
			"transformations": [
				{
					"name": "YearExtraction",
					"description": "Creating/updating the columns 'movieId, title, genres, Year, title'"
				},
				{
					"name": "MapDrifted1",
					"description": "Creates an explicit mapping for each drifted column"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Column_1 as string,",
				"          Column_2 as string,",
				"          Column_3 as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     partitionBy('hash', 1)) ~> moviesinput",
				"MapDrifted1 derive(Year = toInteger(trim(right(Column_2,6),'()')),",
				"          title = toString(left(Column_2,length(Column_2)-6))) ~> YearExtraction",
				"moviesinput derive(Column_1 = toString(byName('movieId')),",
				"          Column_2 = toString(byName('title')),",
				"          Column_3 = toString(byName('genres'))) ~> MapDrifted1",
				"YearExtraction sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['moviesfinal.csv'],",
				"     umask: 0222,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> moviesoutput"
			]
		}
	}
}