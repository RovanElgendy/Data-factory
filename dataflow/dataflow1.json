{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "moviesinput",
						"type": "DatasetReference"
					},
					"name": "moviesinput"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "YearExtraction",
					"description": "Creating/updating the columns 'movieId, title, genres, Year'"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Column_1 as string,",
				"          Column_2 as string,",
				"          Column_3 as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> moviesinput",
				"moviesinput derive(Year = toInteger(trim(right(title,6),'()'))) ~> YearExtraction"
			]
		}
	}
}