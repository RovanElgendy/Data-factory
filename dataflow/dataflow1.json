{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "moviesinput",
						"type": "DatasetReference"
					},
					"name": "moviesinput"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "moviesoutput",
						"type": "DatasetReference"
					},
					"name": "moviesoutput"
				}
			],
			"transformations": [
				{
					"name": "YearExtraction",
					"description": "Creating/updating the columns 'movieId, title, genres, Year, title'"
				}
			],
			"scriptLines": [
				"source(output(",
				"          movieId as string,",
				"          title as string,",
				"          genres as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     partitionBy('hash', 1)) ~> moviesinput",
				"moviesinput derive(Year = toInteger(trim(right(title,6),'()')),",
				"          title = toString(left(title,length(title)-6))) ~> YearExtraction",
				"YearExtraction sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['moviesfinal.csv'],",
				"     umask: 0222,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> moviesoutput"
			]
		}
	}
}